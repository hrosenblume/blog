# Database
DATABASE_URL="file:./dev.db"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here"
AUTH_TRUST_HOST=true

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Initial admin user (used by db:seed)
WRITER_EMAIL="you@example.com"
WRITER_NAME="Your Name"

# Site config
NEXT_PUBLIC_SITE_URL="https://yourdomain.com"
NEXT_PUBLIC_CONTACT_EMAIL="you@example.com"

# Optional: DB dashboard link in writer nav
NEXT_PUBLIC_DATABASE_DASHBOARD_URL="https://your-db-dashboard.com"

# Optional: ngrok for mobile/OAuth testing
NGROK_AUTHTOKEN="your-ngrok-authtoken"
NGROK_DOMAIN="your-subdomain.ngrok.dev"
NGROK_OAUTH_EMAIL="you@example.com"

# Optional: production database for db:import:prod
DATABASE_URL_PROD="postgresql://user:password@host:port/database?sslmode=require"

# RB2B Lead Tracking
NEXT_PUBLIC_RB2B_API_KEY=""

# DigitalOcean Spaces (Image Storage)
SPACES_REGION="sfo3"
SPACES_BUCKET="your-bucket-name"
SPACES_ENDPOINT="https://sfo3.digitaloceanspaces.com"
SPACES_CDN_ENDPOINT="https://your-bucket-name.sfo3.cdn.digitaloceanspaces.com"
SPACES_KEY="your-spaces-access-key"
SPACES_SECRET="your-spaces-secret-key"

# AI Writing (at least one required for AI features)
ANTHROPIC_API_KEY="sk-ant-..."
OPENAI_API_KEY="sk-..."
